# Node3 Agent Configuration
# Copy this file to .env and configure your settings

# Marketplace Settings
MARKETPLACE_URL=https://api.node-3.com
API_KEY=your_api_key_here

# Wallet Settings
WALLET_PATH=./wallet.json
SOLANA_RPC_URL=https://api.devnet.solana.com

# Dashboard Settings
DASHBOARD_PORT=8080

# GPU Settings
SKIP_GPU_CHECK=false

# Telemetry Settings (Optional)
# Enable/disable telemetry reporting
TELEMETRY_ENABLED=true
# Telemetry server URL (reports agent status, GPU info, job completions)
TELEMETRY_URL=https://node3-production-16ca.up.railway.app

# Privacy Note:
# Telemetry collects: GPU model, system info, job stats, MAC address, and approximate location.
# All data is used for network monitoring and optimization.
# Set TELEMETRY_ENABLED=false to disable.

